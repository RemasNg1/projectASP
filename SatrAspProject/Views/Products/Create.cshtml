@model ProductModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card">

                <h4 class="card-header text-center">Add New Product</h4>
 
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Product Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price" class="control-label">Product Price</label>
                            <input asp-for="Price" class="form-control" placeholder="Enter product price" />
                            <span class="text-danger" asp-validation-for="Price"></span>

                        </div>

                        <div class="form-group text-center mt-4">
                            <input type="submit" class="btn btn-success" value="Add Product" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
