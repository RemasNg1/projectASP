@model ProductModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Product: @Model.Name</h1> <hr />
                    <p class="card-text">Price: <strong>@Model.Price $</strong></p>
                    <a class="btn btn-primary mt-3" asp-action="Index">Back To Products</a>
                </div>
            </div>
        </div>
    </div>
</div>
